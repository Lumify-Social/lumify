{% extends 'base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-900">
        <div class="bg-gray-800 p-8 rounded-lg shadow-md w-full max-w-md">
            <h1 class="text-3xl font-bold text-white mb-6 text-center">Se connecter</h1>

            {% if error %}
                <div class="text-red-500 text-center mb-4">
                    <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="text-white text-center mb-4">
                    Vous êtes déjà connecté(e) {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}" class="text-red-400 hover:text-red-600">Me déconnecter</a>
                </div>
            {% endif %}

            <form method="post" class="space-y-4">
                <div>
                    <label for="inputEmail" class="block text-white font-semibold mb-2">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full p-3 bg-gray-700 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" autocomplete="email" required autofocus>
                </div>

                <div>
                    <label for="inputPassword" class="block text-white font-semibold mb-2">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="w-full p-3 bg-gray-700 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" autocomplete="current-password" required>
                </div>

                <div class="flex items-center justify-between">
                    <div class="text-white">
                        <label class="inline-flex items-center">
                            <input type="checkbox" name="_remember_me" class="mr-2 text-red-500">
                            Se souvenir de moi
                        </label>
                    </div>
                    <a href="#" class="text-sm text-red-400 hover:text-red-600">Mot de passe oublié ?</a>
                </div>

                <div>
                    <button type="submit" class="w-full py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                        Connexion
                    </button>
                </div>
                
                <p class="text-center text-white mt-4">
                    Pas encore inscrit ? <a href="{{ path('app_register') }}" class="text-red-400 hover:text-red-600">M'inscrire</a>
                </p>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
{% endblock %}
