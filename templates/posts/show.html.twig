{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
<div class="bg-gradient-to-br from-black via-purple-900 to-gray-900 text-gray-200 min-h-screen">
    <div class="max-w-2xl mx-auto py-12 px-6">
        <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-6 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 mb-6">
            <p class="font-semibold text-lg text-pink-400">{{ post.user.username }}</p>
            <p class="mt-2 text-gray-300">
                {{ post.content }}
            </p>
            <p class="text-sm text-gray-500 mt-4">
                <em>Publié le {{ post.createdAt|date('d/m/Y H:i') }}</em>
            </p>
        </div>

        <h2 class="text-2xl font-semibold text-pink-500 mb-4">Commentaires :</h2>
        {% for comment in post.comments %}
            <div class="bg-gray-700 p-4 rounded mb-4">
                <p class="text-sm text-pink-400">{{ comment.user.username }}</p>
                <p>{{ comment.content }}</p>
                <p class="text-xs text-gray-400">{{ comment.createdAt|date('d/m/Y H:i') }}</p>
            </div>
        {% else %}
            <p class="text-gray-400 italic">Aucun commentaire pour le moment.</p>
        {% endfor %}

        <div class="mt-8">
            <h3 class="text-lg font-semibold text-pink-400 mb-2">Ajouter un commentaire :</h3>
            {{ form_start(comment_form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_widget(comment_form.content, {
                    'attr': {
                        'class': 'w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent',
                        'placeholder': 'Écrivez votre commentaire ici...'
                    }
                }) }}
            </div>
            {{ form_end(comment_form) }}
        </div>
    </div>
</div>
{% endblock %}



