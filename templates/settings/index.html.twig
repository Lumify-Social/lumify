{% block title %}Paramètres - Lumify
{% endblock %}

{% block body %}
	{% include 'posts/sidebar.html.twig' %}
	<div class="text-zinc-200 min-h-screen flex justify-center">
		<div class="py-8 px-4 mx-auto max-w-screen-xl">
			<div class="text-center lg:mb-16 mb-8">
				<h2 class="mb-4 text-4xl font-extrabold text-white">Paramètres</h2>
				<div class="relative p-4 w-full max-w-lg h-full md:h-auto">
					<div class="relative p-4 bg-white rounded-2xl shadow dark:bg-zinc-800 md:p-8">
						<div class="mb-4 text-sm font-light text-zinc-500 dark:text-zinc-400">
							<h3 class="mb-3 text-2xl font-bold text-white">Apparence</h3>
							<div class="flex nowrap space-x-4 mt-5 mb-8 justify-center">
								<img class="w-10 h-10 p-1 rounded-full ring-2 ring-zinc-500" src="{{ asset('img/themes/blue-steel.jpeg') }}" alt="Bordered avatar">
								<img class="w-10 h-10 p-1 rounded-full ring-2 ring-zinc-500" src="{{ asset('img/themes/gotham.jpeg') }}" alt="Bordered avatar">
								<img class="w-10 h-10 p-1 rounded-full ring-2 ring-zinc-500" src="{{ asset('img/themes/gunmetal.jpeg') }}" alt="Bordered avatar">
								<img class="w-10 h-10 p-1 rounded-full ring-2 ring-zinc-500" src="{{ asset('img/themes/midnight.jpeg') }}" alt="Bordered avatar">
								<img class="w-10 h-10 p-1 rounded-full ring-2 ring-zinc-500" src="{{ asset('img/themes/purple-burst.jpeg') }}" alt="Bordered avatar">
								<img class="w-10 h-10 p-1 rounded-full ring-2 ring-zinc-500" src="{{ asset('img/themes/space.jpeg') }}" alt="Bordered avatar">
							</div>
							<hr class="border border-zinc-700 w-75 mb-5">
							<h3 class="mb-3 text-2xl font-bold text-white">Votre compte</h3>
							<p class="font-semibold text-lg text-white">Votre nom d'utilisateur :
								<span class="text-zinc-400">{{ app.user.username }}</span>
							</p>
							<p class="font-semibold text-lg text-white mb-5">Votre adresse e-mail :
								<span class="text-zinc-400">{{ app.user.email }}</span>
							</p>
							<button type="button" class="text-black bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-4 focus:ring-yellow-900 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2">Modifier vos informations</button>
							<button type="button" class="text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-4 focus:ring-red-900 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2">Supprimer votre compte</button>
						</div>
					</div>
				</div> 
			</div>
		</div>

	</div>
</div>{% endblock %}
